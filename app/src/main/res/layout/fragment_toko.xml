<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".TokoFragment">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_toko"
        android:contentDescription="@string/logo_toko" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laptop Store Denpasar"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/bebas_neue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Implicit_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_location"
                android:background="@drawable/bg_white_circle"
                android:backgroundTint="@color/blue"
                app:tint="@color/white"
                android:contentDescription="@string/icons" />
            <ImageView
                android:id="@+id/Implicit_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_call"
                android:background="@drawable/bg_white_circle"
                android:backgroundTint="@color/green"
                app:tint="@color/white"
                android:contentDescription="@string/icons" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>